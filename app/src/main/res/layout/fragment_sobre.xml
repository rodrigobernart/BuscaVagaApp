<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SobreFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@mipmap/ic_logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Busca Vaga"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/tvVersaoApp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/texto_apresentacao"
                android:layout_gravity="center"
                android:layout_margin="25dp"
                android:textAlignment="center"
                android:textSize="15dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Curta nossa pÃ¡gina no Facebook"
                android:textColor="#FFFFFF"
                android:layout_margin="8dp"
                android:background="#3B5998"
                android:id="@+id/btFacebook"/>

            <Button
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Siga a gente no Instagram"
                android:textColor="#FFFFFF"
                android:layout_margin="8dp"
                android:background="#DD2A7B"
                android:id="@+id/btInstagram"/>

            <!--<Button-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Avalie-nos na Play Store"-->
                <!--android:textColor="#FFFFFF"-->
                <!--android:layout_margin="8dp"-->
                <!--android:background="#008000"-->
                <!--android:id="@+id/btPlayStore"/>-->

        </LinearLayout>
    </ScrollView>

</FrameLayout>