<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreferenciasFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Escolha o tipo do seu veículo abaixo:"/>

        <Switch
            android:id="@+id/motoSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Moto"
            android:textSize="15dp"/>

        <Switch
            android:id="@+id/carroSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carro"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Defina suas preferências para exibição de valores:"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <Switch
            android:id="@+id/meiaHoraSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1/2 Hora"
            android:textSize="15dp"/>

        <Switch
            android:id="@+id/umaHoraSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 Hora"
            android:textSize="15dp"/>

        <Switch
            android:id="@+id/diariaSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diária"
            android:textSize="15dp"/>

        <Switch
            android:id="@+id/semanalSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Semanal"
            android:textSize="15dp"/>

        <Switch
            android:id="@+id/mensalSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mensal"
            android:textSize="15dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="15dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Salvar"
                android:onClick="salvarPreferencias"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Limpar"
                android:onClick="limparPreferencias"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>